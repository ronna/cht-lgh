      </input>
      <select1 ref="/cha_signal_verification/signal_verification/source">
        <label ref="jr:itext('/cha_signal_verification/signal_verification/source:label')"/>
        <item>
          <label ref="jr:itext('/cha_signal_verification/signal_verification/source/self:label')"/>
          <value>self</value>
        </item>
        <item>
          <label ref="jr:itext('/cha_signal_verification/signal_verification/source/chief:label')"/>
          <value>chief</value>
        </item>
        <item>
          <label ref="jr:itext('/cha_signal_verification/signal_verification/source/teacher:label')"/>
          <value>teacher</value>
        </item>
        <item>
          <label ref="jr:itext('/cha_signal_verification/signal_verification/source/pastor:label')"/>
          <value>pastor</value>
        </item>
        <item>
          <label ref="jr:itext('/cha_signal_verification/signal_verification/source/village_elder:label')"/>
          <value>village_elder</value>
        </item>
        <item>
          <label ref="jr:itext('/cha_signal_verification/signal_verification/source/chw:label')"/>
          <value>chw</value>
        </item>
        <item>
          <label ref="jr:itext('/cha_signal_verification/signal_verification/source/nurse:label')"/>
          <value>nurse</value>
        </item>
        <item>
          <label ref="jr:itext('/cha_signal_verification/signal_verification/source/other_member:label')"/>
          <value>other_member</value>
        </item>
      </select1>
      <input ref="/cha_signal_verification/signal_verification/source_specify">
        <label ref="jr:itext('/cha_signal_verification/signal_verification/source_specify:label')"/>
      </input>
      <select1 ref="/cha_signal_verification/signal_verification/threat_exists">
