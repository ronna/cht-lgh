        <item>
          <label ref="jr:itext('/cha_signal_verification/signal_verification/threat_exists/yes:label')"/>
          <value>yes</value>
        </item>
        <item>
          <label ref="jr:itext('/cha_signal_verification/signal_verification/threat_exists/no:label')"/>
          <value>no</value>
        </item>
      </select1>
      <input ref="/cha_signal_verification/signal_verification/verification_date">
