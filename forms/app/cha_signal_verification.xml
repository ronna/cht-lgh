      <instance>
        <cha_signal_verification delimiter="#" id="cha_signal_verification" prefix="J1!cha_signal_verification!" version="2020-04-01">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <id_signal/>
          </inputs>
          <patient_id/>
          <signal_id/>
          <signal_verification>
            <signal_id_reminder/>
            <signal_desc/>
            <signal_type/>
            <signal_start_date/>
            <no_people_symptoms/>
            <no_people_dead/>
            <additional_details/>
            <source/>
            <source_specify/>
            <threat_exists/>
            <verification_date/>
          </signal_verification>
          <summary>
            <s_details/>
            <s_details_signal_id_start/>
            <s_investigation/>
            <s_investigation_ill/>
            <s_investigation_dead/>
            <s_followup/>
            <s_followup_note/>
          </summary>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </cha_signal_verification>
      </instance>
      <instance id="contact-summary"/>
      <bind nodeset="/cha_signal_verification/inputs" relevant="0"/>
      <bind nodeset="/cha_signal_verification/inputs/id_signal" type="string"/>
      <bind calculate=" /cha_signal_verification/inputs/id_signal " nodeset="/cha_signal_verification/patient_id" type="string"/>
      <bind calculate=" /cha_signal_verification/inputs/id_signal " jr:constraintMsg="jr:itext('/cha_signal_verification/signal_id:jr:constraintMsg')" nodeset="/cha_signal_verification/signal_id" required="true()" type="string"/>
      <bind nodeset="/cha_signal_verification/signal_verification/signal_id_reminder" readonly="true()" type="string"/>
      <bind nodeset="/cha_signal_verification/signal_verification/signal_desc" required="true()" type="string"/>
      <bind nodeset="/cha_signal_verification/signal_verification/signal_type" required="true()" type="select1"/>
      <bind constraint=". &lt;= date-time(decimal-date-time(today()))" jr:constraintMsg="jr:itext('/cha_signal_verification/signal_verification/signal_start_date:jr:constraintMsg')" nodeset="/cha_signal_verification/signal_verification/signal_start_date" required="true()" type="date"/>
      <bind nodeset="/cha_signal_verification/signal_verification/no_people_symptoms" required="true()" type="int"/>
      <bind nodeset="/cha_signal_verification/signal_verification/no_people_dead" required="true()" type="int"/>
      <bind nodeset="/cha_signal_verification/signal_verification/additional_details" required="false()" type="string"/>
      <bind nodeset="/cha_signal_verification/signal_verification/source" required="true()" type="select1"/>
      <bind nodeset="/cha_signal_verification/signal_verification/source_specify" relevant=" /cha_signal_verification/signal_verification/source  = 'other_member'" type="string"/>
      <bind nodeset="/cha_signal_verification/signal_verification/threat_exists" required="true()" type="select1"/>
      <bind constraint=". &lt;= date-time(decimal-date-time(today()))" jr:constraintMsg="jr:itext('/cha_signal_verification/signal_verification/verification_date:jr:constraintMsg')" nodeset="/cha_signal_verification/signal_verification/verification_date" required="true()" type="date"/>
      <bind nodeset="/cha_signal_verification/summary/s_details" readonly="true()" type="string"/>
      <bind nodeset="/cha_signal_verification/summary/s_details_signal_id_start" readonly="true()" type="string"/>
      <bind nodeset="/cha_signal_verification/summary/s_investigation" readonly="true()" type="string"/>
      <bind nodeset="/cha_signal_verification/summary/s_investigation_ill" readonly="true()" type="string"/>
      <bind nodeset="/cha_signal_verification/summary/s_investigation_dead" readonly="true()" type="string"/>
      <bind nodeset="/cha_signal_verification/summary/s_followup" readonly="true()" type="string"/>
      <bind nodeset="/cha_signal_verification/summary/s_followup_note" readonly="true()" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/cha_signal_verification/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/cha_signal_verification/inputs">
      <input appearance="hidden" ref="/cha_signal_verification/inputs/id_signal"/>
    </group>
    <group appearance="field-list" ref="/cha_signal_verification/signal_verification">
      <label ref="jr:itext('/cha_signal_verification/signal_verification:label')"/>
