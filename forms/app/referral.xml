      <bind nodeset="/referral/refer_other" relevant="selected(../referred_to, 'other')" required="true()" type="string"/>
      <bind nodeset="/referral/notes" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/referral/meta/instanceID" readonly="true()" type="string"/>
