      <instance>
        <cha_signal_reporting delimiter="#" id="cha_signal_reporting" prefix="J1!cha_signal_reporting!" version="2020-04-01">
          <inputs tag="hidden">
            <source>user</source>
            <source_id/>
            <user/>
            <contact>
              <_id/>
              <name/>
              <date_of_birth/>
              <sex/>
              <external_id/>
            </contact>
          </inputs>
          <signal_type/>
          <signal_type_desc/>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </cha_signal_reporting>
      </instance>
      <instance id="contact-summary"/>
      <bind nodeset="/cha_signal_reporting/inputs" relevant="./source = 'user'"/>
      <bind nodeset="/cha_signal_reporting/inputs/source" type="string"/>
      <bind nodeset="/cha_signal_reporting/inputs/source_id" type="string"/>
