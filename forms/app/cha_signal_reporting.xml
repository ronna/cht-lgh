      <bind nodeset="/cha_signal_reporting/inputs/contact/external_id" type="int"/>
      <bind nodeset="/cha_signal_reporting/signal_type" required="true()" type="select1"/>
      <bind calculate="jr:choice-name( /cha_signal_reporting/signal_type , ' /cha_signal_reporting/signal_type ')" nodeset="/cha_signal_reporting/signal_type_desc" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/cha_signal_reporting/meta/instanceID" readonly="true()" type="string"/>
    </model>
